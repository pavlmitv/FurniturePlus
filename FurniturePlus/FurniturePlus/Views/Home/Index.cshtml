@model IndexViewModel

@{
    ViewData["Title"] = "Home";
}

@{
    var items = Model.Items.ToList();
}
<div class="text-center">


    <h1 class="display-4">Welcome to FurniturePlus</h1>
    <br />
    <h4>The best business to client solution in the furniture industry</h4>
    @*
        1.Organize your home interior.
        2.The best business to client solution for interior design
        3. Where partnership.. etc........ X.X
    *@

</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < items.Count(); i++)
        {
            <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                <img class="w-100" src="@items[i].ImageUrl" alt="@items[i].Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Items" asp-action="Details" asp-route-id="@items[i].Id">@items[i].Name</a></h5>
                </div>
            </div>
        }

    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row">
        <h4 class="col-md-4 text-center">
            Total products: @Model.TotalItems
        </h4>
        <h4 class="col-md-4 text-center">
            Total vendors: @Model.TotalVendors
        </h4>
        <h4 class="col-md-4 text-center">
            Total purchases: @Model.TotalPurchases
        </h4>
    </div>
</div>


