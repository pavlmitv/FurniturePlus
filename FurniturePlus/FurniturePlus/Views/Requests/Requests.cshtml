@model List<VendorDetailsModel>

@{ ViewData["Title"] = "Requests"; }

@{ 
    var counter=0;
}

<div class="list-group-item active text-center">
    Vendors waiting for approval
</div>

<table class="table table-hover border-bottom">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phone Number</th>
            <th scope="col">E-Mail</th>
            <th scope="col">VAT Number</th>
            <th scope="col" class="col-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@vendor.Name</td>
                <td>@vendor.Address</td>
                <td>@vendor.Phone</td>
                <td>@vendor.Email</td>
                <td>@vendor.VATNumber</td>
                <td>
                    <a asp-area="" asp-controller="Requests" asp-action="Approve" asp-route-id="@vendor.Id" class="btn btn-primary btn-outline-success offset-5">Approve</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Requests" asp-action="Decline" asp-route-id="@vendor.Id" class="btn btn-primary btn-outline-danger">Decline</a>
                </td>
            </tr>
        }

    </tbody>
</table>
